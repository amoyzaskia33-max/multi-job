# SPIO Agent - Environment Configuration
# Copy file ini ke .env dan sesuaikan nilai-nilainya

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# WORKER CONFIGURATION
# ===========================================
# Jumlah concurrent worker slots (default: 5)
WORKER_CONCURRENCY=5

# ===========================================
# SCHEDULER CONFIGURATION
# ===========================================
# Maximum jobs yang di-dispatch per tick
SCHEDULER_MAX_DISPATCH_PER_TICK=80
# Queue depth threshold untuk masuk pressure mode
SCHEDULER_PRESSURE_DEPTH_HIGH=300
# Queue depth threshold untuk keluar dari pressure mode
SCHEDULER_PRESSURE_DEPTH_LOW=180

# ===========================================
# AI CONFIGURATION (OPTIONAL)
# ===========================================
# Local AI (Ollama, dll)
LOCAL_AI_URL=http://host.docker.internal:11434/v1
PLANNER_AI_MODEL=llama3

# VPS 2 - AI Factory (Image Generation)
# Isi dengan IP VPS 2 jika menggunakan private AI factory
AI_NODE_URL=
AI_NODE_SECRET=factory-secret-123

# ===========================================
# TELEGRAM NOTIFICATION (OPTIONAL)
# ===========================================
# Token bot Telegram untuk notifikasi
TELEGRAM_NOTIF_TOKEN=
# Chat ID untuk menerima notifikasi
TELEGRAM_NOTIF_CHAT_ID=

# ===========================================
# AUTH & RBAC (OPTIONAL)
# ===========================================
# Enable authentication
AUTH_ENABLED=false
# API keys dengan format: token:role,token2:role2
# Roles: admin, operator, viewer
AUTH_API_KEYS=admin_token:admin,operator_token:operator,viewer_token:viewer
# Header name untuk token auth
AUTH_TOKEN_HEADER=Authorization
# Token scheme (Bearer, Basic, dll)
AUTH_TOKEN_SCHEME=Bearer

# ===========================================
# LOGGING & OBSERVABILITY (OPTIONAL)
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable structured JSON logging
JSON_LOGGING=true

# ===========================================
# PERFORMANCE TUNING (OPTIONAL)
# ===========================================
# Maximum request body size (MB)
MAX_REQUEST_SIZE=10
# Request timeout (seconds)
REQUEST_TIMEOUT=30
# Worker graceful shutdown timeout (seconds)
SHUTDOWN_TIMEOUT=30
